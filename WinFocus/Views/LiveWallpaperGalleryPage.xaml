<Page
    x:Class="WinFocus.Views.LiveWallpaperGalleryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WinFocus.Core.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Border BorderThickness="1" CornerRadius="4" />
            <GridView
                x:Name="VideoGridView"
                AllowDrop="False"
                CanDragItems="False"
                CanReorderItems="False"
                FlowDirection="LeftToRight"
                IsItemClickEnabled="True"
                ItemsSource="{x:Bind ViewModel.Source, Mode=OneWay}"
                SelectionMode="Single">
                <DataTemplate x:DataType="models:VideoItem">
                    <StackPanel>
                        <Image
                            Width="190"
                            Height="130"
                            AutomationProperties.AccessibilityView="Raw"
                            Source="{x:Bind Path=Thumbnail}"
                            Stretch="Fill" />
                        <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="{x:Bind VideoName}" />
                    </StackPanel>
                </DataTemplate>
            </GridView>


        </Grid>
        <StackPanel Padding="4,2,4,0">
            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="LiveWallpaper Info" />
            <StackPanel Margin="0,10,4,0" Orientation="Horizontal">
                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="Size " />
                <TextBlock x:Name="txtSize" Style="{ThemeResource CaptionTextBlockStyle}" />
            </StackPanel>
            <StackPanel Margin="0,10,4,10" Orientation="Horizontal">
                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="Resolution " />
                <TextBlock x:Name="txtResolution" Style="{ThemeResource CaptionTextBlockStyle}" />
            </StackPanel>

            <Image
                x:Name="thumbnail"
                Width="190"
                Height="130"
                AutomationProperties.AccessibilityView="Raw"
                Stretch="Fill" />

            <Button Content="Set As Wallpaper" />
        </StackPanel>
    </StackPanel>
</Page>
